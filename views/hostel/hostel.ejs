<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Hostel</title>
    <link rel="stylesheet" href="/./stylesheets/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h1>Hostel Panel</h1>
        <div class="row">
            <div class="col-lg-4">
                <select id="cityid" class="form-control">
                    <option value="null">Choose a City</option>
                </select>
            </div>
            <div class="col-lg-4">
                <input type="text" id="name" class="form-control" placeholder="New Hostel" />
            </div>
            <div class="col-lg-4">
                <button class="btn btn-block" style="float: right;" id="add">Add Hostel</button>
            </div>
        </div>
        <hr>
        <div>
            <table id="result" class="table table-bordered"></table>
        </div>
    </div>
    <script src="/./javascripts/jquery.js"></script>
    <script>
        $('#add').click(function () {
            $.post('/hostel/new', {
                name: $('#name').val(),
                cityid: parseInt($('#cityid').val())
            }, data => refresh())
        })

        $('#result').on('click', '.delete', e => {
            const id = e.target.attributes[1].value
            $.get(`/hostel/delete/${id}`, data => refresh())
        })

        function refresh() {
            $.getJSON(`/city/all`, data => $.each(data.result, (i, item) => $('#cityid').append($('<option>').val(item.id)
                .text(item.name))))
            $.getJSON('/hostel/all', data => makeTable(data.result))
        }

        function makeTable(data) {
            let table = "<tr><td>ID</td><td>City</td><td>Name</td><td>Free cycle</td><td>Delete</td></tr>";
            $.each(data, (i, item) => {
                let free_cycle = `<button class="btn btn-primary free_cycle" id="${item.id}" status="${item.free_cycle}">Yes</button>`;
                if(item.free_cycle == 'true') {
                    free_cycle = `<button class="btn btn-danger free_cycle" id="${item.id}" status="${item.free_cycle}">No</button>`;
                }
                table +=
                    `<tr>
                        <td>${item.id}</td>
                        <td>${item.cityname}</td>
                        <td>${item.name}</td>
                        <td>${free_cycle}</td>
                        <td><button class="btn btn-danger delete" id=${item.id}>Delete</button></td>
                    </tr>`
            })
            table += "</table>"
            $('#result').html(table)
        }

        $('#result').on('click', '.free_cycle', (e) => {
            const id = e.target.attributes[1].value;
            const status = e.target.attributes[2].value;
            const _url = `/hostel/change-free-cycle/${id}/${status}`;
            $.get(_url, { id }, () => refresh());
        });

        refresh()
    </script>
</body>

</html>